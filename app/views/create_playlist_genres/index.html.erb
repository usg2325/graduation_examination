<%= form_with url: create_playlist_genres_path, method: :post do |f| %>
  <div class="grid grid-cols-2 w-full">
    <div class="flex w-full justify-center pt-20">
      <div class="border border-gray-200 w-4/5">
        <div class="card bg-base-200">
          <div class="card_title text-center py-5">
            <p><%= '5つまで選択可能' %></p>
          </div>
          <div class="card-body pb-5 pt-2 pl-10 ">
            <% @genres.each_slice(2) do |genre_pair| %>
              <div class="flex flex-row pt-3">
                <% genre_pair.each do |genre| %>
                  <div class="flex flex-col w-1/2">
                    <div class="form-check flex items-center">
                      <%= f.check_box :genre_ids, { multiple: true, class: 'checkbox checkbox-accent', name: 'create_genre[genre_ids][]' }, genre.id, nil %>
                      <%= label_tag "genre_ids_#{genre.id}", t("genres.#{genre.name}"), class: "px-2" %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>  
    </div>
    <div class="flex flex-col w-full items-center">
      <div class="form-group py-20 w-2/3">
        <%= f.label :プレイリスト名 %>
        <div class='pt-3' %>
          <%= f.text_field :playlist_name, class: 'form-control input input-bordered input-secondary w-full', placeholder: 'New Playlist',  name: 'create_genre[playlist_name]' %>
        </div>
        <div class="pt-10">
          <div class="collapse collapse-arrow bg-base-300 ">
            <input type="checkbox" />
            <div class="collapse-title font-medium">プレイリスト設定</div>
              <div class="collapse-content">
                <div class="px-5">
                  <%= f.label :プレイリストの曲数, class: "text-sm" %>
                </div>
                <div class="flex flex-row text-center px-10 pt-1">
                  <%= f.text_field :playlist_number, class: 'form-control input input-bordered input-secondary w-1/3', placeholder: '10',  name: 'create_genre[playlist_number]' %>
                  <div class="flex items-center px-2"><p>曲</p></div>
                </div>
              <div class="px-10 py-5 text-sm"><p>※曲数は10〜30の範囲で設定してください</p></div>
            </div>
          </div>
        </div>
      </div>
      <%= f.submit "プレイリスト作成", class: "btn btn-outline btn-primary w-1/2" %>
    </div>
  </div>
<% end %>
