<div class="flex flex-col items-center w-full"> 
  <h1 class="text-4xl font-bold font-body py-10 "><%= 'ログイン' %></h1>
  <ul class="steps w-1/3">
    <li class="step step-primary">アプリログイン</li>
    <li class="step">Spotifyログイン</li>
  </ul>
    <%= form_with url: login_path, local: true, class: "w-1/4" do |f| %>
      <div class="form-group pt-10">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, class: 'form-control input input-bordered input-secondary w-full' %>
      </div>
      <div class="form-group pt-5">
        <%= f.label :パスワード %>
        <%= f.password_field :password, class: 'form-control input input-bordered input-secondary w-full' %>
      </div>
      <div class="actions pt-10 flex justify-center">
        <%= f.submit "ログイン", class: 'btn btn-primary w-1/2' %>
      </div>
    <% end %>
    </div>
  </div>
</div>
